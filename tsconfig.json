{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],

	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"],
			"@hooks/*": ["hooks/*"],
			"@context/*": ["context/*"],
			"@images/*": ["assets/images/*"],
			"@repositories/*": ["repositories/*"],
		}
	}
}