            </div>

            <!-- Room Assignments Component -->
            <RoomAssignments client:only="react" />
          </div>

          <!-- Activity 3: Picnic -->
          <div class="bg-black border-4 border-green-500 p-6 gaming-glow relative animate-slide-up" style="animation-delay: 0.3s;">
            <div class="absolute -top-2 -left-2 w-4 h-4 bg-green-500"></div>
            <div class="absolute -top-2 -right-2 w-4 h-4 bg-green-500"></div>
            <div class="absolute -bottom-2 -left-2 w-4 h-4 bg-green-500"></div>
            <div class="absolute -bottom-2 -right-2 w-4 h-4 bg-green-500"></div>

            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
              <div class="flex items-center gap-4">
                <div class="text-5xl">üçï</div>
                <div>
                  <div class="px-3 py-1 bg-green-500 text-black inline-block mb-2 pixel-text text-xs border-2 border-black">
                    STAGE 3
                  </div>
                  <h3 class="text-2xl md:text-3xl font-bold text-green-400 pixel-heading">PICNIC</h3>
